@model List<dbPractice.Models.Database.student>
@{
    ViewBag.Title = "Scholarship";
}

<h2>Scholarship Student List</h2>

<table class="table table-bordered">
    <tr>
        <th>Name</th>
        <th>Id</th>
        <th>CGPA</th>
        <th>Age</th>
    </tr>
    @if(Model.Count==0) 
    { 
        <tr>
            <td colspan="3" style="text-align:center;">No student found</td>
        </tr>
    }
    else
    { 
    foreach (var obj in Model)
    {
        <tr>
            <td>@obj.name</td>
            <td>@obj.id</td>
            <td>@obj.cgpa</td>
            <td>@obj.age</td>
        </tr>
    }
    }
</table>

